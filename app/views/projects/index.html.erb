  <tbody>
    <% @show_projects.each do |p| %>
        <tr>
          <td>
            <%= link_to(p.project_name, "/projects/#{p.project_id}", class: "btn btn-light") %>
          </td>
          <td><%= truncate(p.description, length: 35) %></td>
          <td><%= p.leader_name %></td>
          <td><%= p.grade %></td>
          
        </tr>
    <% end %>
  </tbody>
</table>
