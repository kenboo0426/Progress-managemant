<%# <p class="finish hide">終了したプロジェクトを非表示にする</p>
<p class="continue">全て表示する</p>
<script>
  $(function(){
    $('.finish').click(function(){
      $('.complete').removeClass('show')
      $(this).addClass('hide')
      $('.continue').removeClass('hide')
    })
    $('.continue').click(function(){
      $('.complete').addClass('show')
      $(this).addClass('hide')
      $('.finish').removeClass('hide')
    })
  })
</script> %>
